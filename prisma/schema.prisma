generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement()) @unique 
  email String @unique
  username String @unique
  first String
  last String 
  password String
  avatar Avatar?
  posts Post[]
  comments Comment[]
 // contacts Contact[]
}

model Avatar {
  id Int @id @default(autoincrement())
  owner User @relation(fields: [ownerId], references: [id]) 
  ownerId Int @unique
  url String
}

model Contact {
  // contactOwner User @relation(fields: [ownerId], references: [id]) 
 // ownerId Int @unique
  id Int @id @default(autoincrement())
  email String @unique 
  phone String?
  first String
  last String?
  nickname String?  
  twitter String?
  notes String?
  avatar String? 
  favorite Boolean? @default(false)
}

