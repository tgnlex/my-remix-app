model Post {
  id Int @id @default(autoincrement())
  title String 
  content String 
  published Boolean @default(false)
  creaetedAt DateTime
  author User @relation(fields: [authorId], references: [id])
  authorId Int 
  comments Comment[]
}

model Comment {
  author User @relation(fields: [authorId], references: [id]) 
  authorId Int @unique
  post  Post @relation(fields: [postId], references: [id])
  postId Int 
  content String
  createdAt DateTime
  }